apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: loki-internal
  namespace: loki-system
  annotations:
    cert-manager.io/cluster-issuer: ca-cluster-issuer
    cert-manager.io/common-name: "loki.{{ kubernetes_ingress_root_domain }}"
    cert-manager.io/email-sans: hiteshnayak305@gmail.com
    cert-manager.io/private-key-algorithm: RSA
    cert-manager.io/private-key-size: '4096'
    cert-manager.io/subject-countries: IN
    cert-manager.io/subject-localities: PUNE
    cert-manager.io/subject-organizationalunits: DEV
    cert-manager.io/subject-organizations: DEV
    cert-manager.io/subject-streetaddresses: MH
    cert-manager.io/usages: server auth,client auth
    meta.helm.sh/release-name: loki
    meta.helm.sh/release-namespace: loki-system
    nginx.ingress.kubernetes.io/force-ssl-redirect: 'true'
spec:
  ingressClassName: nginx-internal
  rules:
    - host: "loki.{{ kubernetes_ingress_root_domain }}"
      http:
        paths:
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /api/prom/push
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /loki/api/v1/push
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /api/prom/tail
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /loki/api/v1/tail
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /loki/api
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /api/prom/rules
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /loki/api/v1/rules
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /prometheus/api/v1/rules
            pathType: Prefix
          - backend:
              service:
                name: loki
                port:
                  number: 3100
            path: /prometheus/api/v1/alerts
            pathType: Prefix
  tls:
    - hosts:
        - "loki.{{ kubernetes_ingress_root_domain }}"
      secretName: loki-tls-internal
